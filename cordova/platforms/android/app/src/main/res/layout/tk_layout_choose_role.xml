<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_choose_role"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/popup_role_title_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/re_tile"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/login_choose_user_role"
            android:textColor="@color/color_choose_role"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="13dp"
            android:gravity="center"
            android:text="@string/crash_dialog_negative_button"
            android:textColor="@color/color_choose_role"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_choose_view" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/ll_role"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/cb_student"
                    android:layout_width="90dp"
                    android:layout_height="29dp"
                    android:background="@drawable/tk_shape_role_backgroud"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/student"
                    android:textColor="@color/color_chat_nickname"
                    android:textSize="12dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/cb_teacher"
                    android:layout_width="90dp"
                    android:layout_height="29dp"
                    android:background="@drawable/tk_shape_role_backgroud"
                    android:gravity="center"
                    android:text="@string/teacher"
                    android:textColor="@color/color_chat_nickname"
                    android:textSize="12dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">


                <TextView
                    android:id="@+id/cb_lass_patrol"
                    android:layout_width="90dp"
                    android:layout_height="29dp"
                    android:background="@drawable/tk_shape_role_backgroud"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/lass_patrol"
                    android:textColor="@color/color_chat_nickname"
                    android:textSize="12dp" />
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
