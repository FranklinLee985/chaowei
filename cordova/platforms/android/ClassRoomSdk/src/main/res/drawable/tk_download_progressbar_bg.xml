<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  设置背景色  -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="90px" />
            <gradient
                android:endColor="@color/download_progress_bg"
                android:startColor="@color/download_progress_bg" />
        </shape>
    </item>

    <!--  设置进度条颜色  -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="90px" />
                <gradient
                    android:endColor="@color/download_progress"
                    android:startColor="@color/download_progress" />
            </shape>
        </clip>
    </item>

</layer-list>