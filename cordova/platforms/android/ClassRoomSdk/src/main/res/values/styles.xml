<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="FullScreenTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="pen_type_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:textColor">#2AB2F1</item>-->
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="pen_type_ll">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tools_timer_select">
        <item name="android:textColor">@color/tools_timer_select</item>
    </style>

    <style name="tools_timer_unselect">
        <item name="android:textColor">@color/tools_timer_unselect</item>
    </style>

    <style name="white_board_lord">
        <item name="android:textColor">@color/white_board_lord</item>
    </style>

    <style name="whiteboard">
        <item name="android:textColor">@color/small_top_buttom_white</item>
    </style>


    <style name="dialogstyle">

        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>


        <!-- &lt;!&ndash;设置dialog的背景&ndash;&gt;
         <item name="android:windowBackground">@android:color/transparent</item>
         &lt;!&ndash;设置Dialog的windowFrame框为无&ndash;&gt;
         <item name="android:windowFrame">@null</item>
         &lt;!&ndash;设置无标题&ndash;&gt;
         <item name="android:windowNoTitle">true</item>
         &lt;!&ndash;是否浮现在activity之上&ndash;&gt;
         <item name="android:windowIsFloating">true</item>
         &lt;!&ndash;是否半透明&ndash;&gt;
         <item name="android:windowIsTranslucent">false</item>
         &lt;!&ndash;设置窗口内容不覆盖&ndash;&gt;
         <item name="android:windowContentOverlay">@null</item>
         &lt;!&ndash;设置动画，在这里使用让它继承系统的Animation.Dialog&ndash;&gt;
         <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
         &lt;!&ndash;背景是否模糊显示&ndash;&gt;
         <item name="android:backgroundDimEnabled">false</item>
         <item name="android:gravity">bottom</item>-->
    </style>

</resources>
