<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_play_back"
    android:layout_width="match_parent"
    android:layout_height="110px"
    android:background="@drawable/tk_shape_media_play_bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_play_back"
        android:layout_width="85px"
        android:layout_height="85px"
        android:layout_gravity="center_vertical"
        android:scaleType="centerInside"
        android:src="@drawable/tk_btn_pause_normal" />

    <SeekBar
        android:id="@+id/sek_play_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:maxHeight="5.0dip"
        android:minHeight="2.0dip"
        android:paddingLeft="23px"
        android:paddingRight="23px"
        android:progressDrawable="@drawable/tk_po_seekbar_white"
        android:thumb="@drawable/tk_shape_media_player_seekbar_progress_bg" />

    <TextView
        android:id="@+id/txt_play_back_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:paddingRight="10dp"
        android:text="00:00/00:00"
        android:textColor="@color/color_play_speed"
        android:textSize="27px" />

</LinearLayout>