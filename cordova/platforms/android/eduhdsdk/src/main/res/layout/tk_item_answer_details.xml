<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tk_answer_item_details_bg"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/amswer_item_details_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="20px"
        android:layout_marginTop="20px"
        android:text="name"
        android:textColor="@color/tools_answer_details_text"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/amswer_item_details_answers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20px"
        android:layout_marginTop="20px"
        android:text="@string/answer_selections"
        android:textColor="@color/tools_answer_details_text"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/amswer_item_details_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="20px"
        android:text="00：00：00"
        android:textColor="@color/tools_answer_details_text"
        android:textSize="8sp" />

</RelativeLayout>