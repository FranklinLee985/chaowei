<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180px">

    <ImageView
        android:id="@+id/up_arr"
        android:layout_width="20px"
        android:layout_height="20px"
        android:src="@drawable/tk_up_arr_gray"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/down_arr"
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_alignParentBottom="true"
        android:src="@drawable/tk_down_arr"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/right_arr"
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/tk_right_arr_gray"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/lin_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/down_arr"
        android:layout_below="@id/up_arr"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/right_arr"
        android:background="@drawable/tk_shape_student_video_popup_backgroud_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/lin_audio_control"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_audio"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:scaleType="fitCenter"
                android:src="@drawable/tk_icon_close_audio" />

            <TextView
                android:id="@+id/txt_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:text="@string/close_audio"
                android:textColor="#FFFFFF"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_video_control"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_camera"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:scaleType="fitCenter"
                android:src="@drawable/tk_icon_close_vidio" />

            <TextView
                android:id="@+id/txt_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:text="@string/video_off"
                android:textColor="#FFFFFF"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_single_fuwe"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_single_fuwei"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:scaleType="fitCenter"
                android:src="@drawable/tk_icon_fuwei" />

            <TextView
                android:id="@+id/txt_single_fuwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:text="@string/restore_single"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_all_fuwe"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_all_fuwei"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:scaleType="fitCenter"
                android:src="@drawable/tk_icon_fuwei_all" />

            <TextView
                android:id="@+id/txt_all_fuwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:text="@string/restore_all"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_change"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="2dp"
                android:id="@+id/img_change"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:scaleType="fitCenter"
                android:src="@drawable/tk_change_default" />

            <TextView
                android:layout_marginTop="1dp"
                android:id="@+id/txt_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/video_change"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </LinearLayout>
        <!-- <LinearLayout
             android:id="@+id/lin_plit_screen"
             android:layout_width="0px"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:gravity="center_horizontal"
             android:orientation="vertical">

             <ImageView
                 android:id="@+id/img_plit_screen"
                 android:layout_width="28dp"
                 android:layout_height="28dp"
                 android:scaleType="fitCenter"
                 android:src="@drawable/tk_icon_speech" />

             <TextView
                 android:id="@+id/txt_plit_screen"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="1dp"
                 android:gravity="center"
                 android:text="@string/plitscreen"
                 android:textColor="#FFFFFF"
                 android:textSize="11sp" />
         </LinearLayout>-->

    </LinearLayout>

</RelativeLayout>