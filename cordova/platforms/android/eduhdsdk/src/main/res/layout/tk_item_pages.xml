<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/tk_whiteboard_page_back"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="20px"
    android:paddingRight="30px">

    <ImageView
        android:id="@+id/page_iv_left"
        android:layout_width="40px"
        android:layout_height="40px"
        android:paddingBottom="10px"
        android:paddingLeft="15px"
        android:paddingRight="15px"
        android:paddingTop="10px"
        android:scaleType="fitXY"
        android:src="@drawable/tk_wb_page_icon_left_disable" />

    <TextView
        android:id="@+id/page_tv_nums"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:minWidth="40px"
        android:paddingLeft="15px"
        android:paddingRight="11px"
        android:text="1 / 1"
        android:textColor="@color/white"
        android:textSize="15px" />

    <ImageView
        android:id="@+id/page_iv_arrow"
        android:layout_width="24px"
        android:layout_height="16px"
        android:layout_marginTop="3px"
        android:paddingRight="15px"
        android:src="@drawable/tk_icon_xiala_default" />

    <ImageView
        android:id="@+id/page_iv_right"
        android:layout_width="40px"
        android:layout_height="40px"
        android:paddingBottom="10px"
        android:paddingLeft="15px"
        android:paddingRight="15px"
        android:paddingTop="10px"
        android:scaleType="fitXY"
        android:src="@drawable/tk_wb_page_icon_right_default" />

    <ImageView
        android:id="@+id/page_iv_large"
        android:layout_width="50px"
        android:layout_height="40px"
        android:paddingLeft="15px"
        android:paddingRight="15px"
        android:src="@drawable/tk_wb_page_icon_large_default" />

    <ImageView
        android:id="@+id/page_iv_small"
        android:layout_width="50px"
        android:layout_height="40px"
        android:paddingLeft="15px"
        android:paddingRight="15px"
        android:src="@drawable/tk_wb_page_icon_small_disable" />

    <ImageView
        android:id="@+id/page_iv_full_screen"
        android:layout_width="45px"
        android:layout_height="40px"
        android:paddingLeft="15px"
        android:paddingRight="10px"
        android:src="@drawable/tk_wb_page_icon_full_screen_default" />

    <ImageView
        android:id="@+id/page_iv_remark"
        android:layout_width="45px"
        android:layout_height="40px"
        android:paddingLeft="15px"
        android:paddingRight="10px"
        android:src="@drawable/tk_wb_page_icon_remark_press"
        android:visibility="gone" />

</LinearLayout>