<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_put"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_small_input_edit_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="10px"
            android:layout_weight="1"
            android:background="@drawable/tk_round_chat_input_back">

            <ImageView
                android:id="@+id/iv_chat"
                android:layout_width="25px"
                android:layout_height="25px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12px"
                android:gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/tk_icon_expression" />

            <ImageView
                android:id="@+id/iv_broad"
                android:layout_width="25px"
                android:layout_height="25px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12px"
                android:gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/tk_icon_keyboard"
                android:visibility="gone" />

            <View
                android:layout_width="1dp"
                android:layout_height="25px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="45px"
                android:background="@color/chat_message_line_color" />

            <EditText
                android:id="@+id/edt_input_chat"
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:layout_marginRight="60px"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/say_something"
                android:imeOptions="flagNoExtractUi"
                android:lines="1"
                android:paddingLeft="20px"
                android:textColor="@color/three_color_chat_input"
                android:textColorHint="@color/three_color_chat_input_hint"
                android:textSize="18px" />

            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="45px"
                android:layout_height="45px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="45px"
                android:gravity="center"
                android:padding="10px"
                android:visibility="gone"
                android:scaleType="fitXY"
                android:src="@drawable/tk_icon_pic" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_send"
            android:layout_width="95px"
            android:layout_height="44px"
            android:layout_centerInParent="true"
            android:layout_marginRight="20px"
            android:background="@drawable/tk_selector_bt_send_message"
            android:gravity="center"
            android:text="@string/send"
            android:textColor="@color/color_chat_send"
            android:textSize="16px" />

    </LinearLayout>

    <GridView
        android:id="@+id/chart_face_gv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:horizontalSpacing="10dp"
        android:numColumns="14"
        android:padding="10dp"
        android:verticalSpacing="10dp"
        android:visibility="gone" />

</LinearLayout>



