<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/up_arr"
        android:layout_width="20px"
        android:layout_height="20px"
        android:src="@drawable/tk_up_arr_selectphoto"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/up_arr"
        android:background="@drawable/tk_popup_window_bg_centent"
        android:orientation="horizontal"
        android:paddingRight="25px">

        <LinearLayout
            android:id="@+id/ll_unmute"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="25px"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_unmute"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_marginTop="19px"
                android:scaleType="fitXY"
                android:src="@drawable/tk_button_talk_all" />

            <TextView
                android:id="@+id/txt_unmute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="19px"
                android:layout_marginTop="10px"
                android:singleLine="true"
                android:text="@string/unmute_all"
                android:textColor="@color/white"
                android:textSize="14px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mute"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="28px"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_mute"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_marginTop="19px"
                android:scaleType="fitXY"
                android:src="@drawable/tk_jingyin_default" />

            <TextView
                android:id="@+id/txt_mute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="19px"
                android:layout_marginTop="10px"
                android:singleLine="true"
                android:text="@string/mute_all"
                android:textColor="@color/white"
                android:textSize="14px" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_send_gift"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="25px"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_send_gift"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_marginTop="19px"
                android:scaleType="fitXY"
                android:src="@drawable/tk_jiangli_default" />

            <TextView
                android:id="@+id/txt_send_gift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="19px"
                android:layout_marginTop="10px"
                android:singleLine="true"
                android:text="@string/send_gift_all"
                android:textColor="@color/white"
                android:textSize="14px" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_all_recovery"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="25px"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_all_recovery"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_marginTop="19px"
                android:scaleType="fitXY"
                android:src="@drawable/tk_fuwei_default" />

            <TextView
                android:id="@+id/txt_all_recovery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="19px"
                android:layout_marginTop="10px"
                android:singleLine="true"
                android:text="@string/recovery_teacher"
                android:textColor="@color/white"
                android:textSize="14px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_all_audio"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="25px"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_all_audio"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_marginTop="19px"
                android:scaleType="fitXY"
                android:src="@drawable/tk_audio_default" />

            <TextView
                android:id="@+id/txt_all_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="19px"
                android:layout_marginTop="10px"
                android:text="@string/audio_teaching"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="14px" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
