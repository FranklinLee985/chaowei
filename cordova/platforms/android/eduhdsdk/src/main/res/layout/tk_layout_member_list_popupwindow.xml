<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/tk_popup_title_file_member_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/three_popup_center_bg"
        android:orientation="vertical">

        <include
            android:id="@+id/ll_student_name_list"
            layout="@layout/tk_popup_student_name_list_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/ll_chose"
            android:layout_width="wrap_content"
            android:layout_height="50px"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10px"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/im_to_left"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_marginRight="20px"
                android:scaleType="fitXY"
                android:src="@drawable/tk_munber_common_icon_left" />

            <TextView
                android:id="@+id/et_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/three_color_chose_number"
                android:textSize="15px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20px"
                android:gravity="center_vertical"
                android:text="/"
                android:textColor="@color/three_color_chose_number"
                android:textSize="16px" />

            <TextView
                android:id="@+id/tv_number_total"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15px"
                android:gravity="center_vertical"
                android:text="1"
                android:textColor="@color/three_color_chose_number"
                android:textSize="16px" />

            <ImageView
                android:id="@+id/im_to_right"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_marginLeft="20px"
                android:scaleType="fitXY"
                android:src="@drawable/tk_munber_common_icon_right" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>
