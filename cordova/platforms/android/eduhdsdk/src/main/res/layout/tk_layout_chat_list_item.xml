<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_normal"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/tk_qipao1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txt_msg_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="7"
            android:singleLine="true"
            android:textColor="@color/tk_chat_name_color"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="7"
            android:singleLine="true"
            android:text="ï¼š"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <com.eduhdsdk.tools.HttpTextView
            android:id="@+id/txt_ch_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/img_translation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@drawable/tk_translation_default" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_ts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:textColor="@color/three_color_chat_time"
        android:textSize="8sp"
        android:visibility="gone" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/white_p30" />

    <TextView
        android:id="@+id/txt_eng_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:textSize="10sp" />

</LinearLayout>